<form class="new-record" action="/record/{{record._id}}?_method=PUT" method="POST">
  <div class="title">編輯支出</div>
  <div class="form-group">
    <input type="text" class="form-control" id="name" name="name" placeholder="項目名稱" value="{{record.name}}" required>
  </div>
  <div class="form-group">
    <select class="form-control" id="category" name="category" placeholder="支出類別" value="{{record.category}}" required>
      <option>{{record.category}}</option>
      {{#each categoriesList}}
      <option>{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <input type="date" class="form-control record-date" id="date" name="date" placeholder="日期" value="{{record.date}}"
      required>
  </div>
  <div class="form-group">
    <input type="number" class="form-control" id="amount" name="amount" placeholder="金額" value="{{record.amount}}"
      required>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" id="remark" name="remark" placeholder="備註" value="{{record.remark}}">
  </div>
  <div class="form-group row justify-content-center">
    <button type="submit" class="btn mt-3">儲存</button>
  </div>
</form>